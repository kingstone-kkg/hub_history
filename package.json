{
    "name": "hubl",
    "displayName": "HubL Language Extension",
    "description": "HubL Visual Studio Code Language Extension",
    "version": "0.1.4",
    "publisher": "WilliamSpiro",
    "engines": {
        "vscode": "^1.30.0"
    },
    "scripts": {
        "generate": "node ./scripts/generate.js",
        "lint": "eslint . --ext .js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/williamspiro/HubL-Language-Extension"
    },
    "homepage": "https://github.com/williamspiro/HubL-Language-Extension/blob/master/README.md",
    "categories": [
        "Snippets"
    ],
    "main": "./main.js",
    "activationEvents": [
        "onLanguage:html"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/auto_gen/hubl_filters.json"
            },
            {
                "language": "html",
                "path": "./snippets/auto_gen/hubl_functions.json"
            },
            {
                "language": "html",
                "path": "./snippets/auto_gen/hubl_tags.json"
            },
            {
                "language": "html",
                "path": "./snippets/auto_gen/hubl_expTests.json"
            },
            {
                "language": "html",
                "path": "./snippets/man_gen/hubl_extras.json"
            },
            {
                "language": "html",
                "path": "./snippets/man_gen/hubl_request_variables.json"
            },
            {
                "language": "html",
                "path": "./snippets/man_gen/hubl_blog_variables.json"
            },
            {
                "language": "html",
                "path": "./snippets/man_gen/hubl_general_variables.json"
            },
            {
                "language": "html",
                "path": "./snippets/man_gen/hubl_color_and_font_settings.json"
            },
            {
                "language": "html",
                "path": "./snippets/man_gen/hubl_email_variables.json"
            },
            {
                "language": "html",
                "path": "./snippets/man_gen/hubl_required_email_template_variables.json"
            },
            {
                "language": "json",
                "path": "./snippets/man_gen/hubl_custom_module_fields.json"
            }
        ],
        "languages": [
            {
                "id": "hubl",
                "extensions": [
                    ".hubl.html"
                ],
                "configuration": "./langconfig/language-configuration.json"
            },
            {
                "id": "html",
                "extensions": [
                    ".html"
                ],
                "configuration": "./langconfig/language-configuration.json"
            },
            {
                "id": "css",
                "extensions": [
                    ".css"
                ],
                "configuration": "./langconfig/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hubl",
                "scopeName": "source.hubl",
                "path": "./syntaxes/hubl.json"
            },
            {
                "language": "html",
                "scopeName": "text.html.hubl",
                "path": "./syntaxes/hubl-html.json"
            },
            {
                "language": "hubl",
                "scopeName": "source.hubl",
                "path": "./syntaxes/hubl.json",
                "injectTo": [
                    "source.css",
                    "source.js",
                    "source.html"
                ]
            }
        ]
    },
    "dependencies": {
        "@types/vscode": "^1.47.0",
        "fs-extra": "^9.0.1",
        "node-fetch": "^2.6.0"
    },
    "devDependencies": {
        "eslint": "^7.5.0",
        "prettier": "^2.0.5"
    }
}
